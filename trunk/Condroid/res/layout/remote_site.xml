<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_wood">
    <LinearLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:weightSum="1">
    	<ImageView    		
    		android:src="@drawable/new_db" 
    		android:layout_gravity="center" 
    		android:layout_width="50dp" 
    		android:layout_height="50dp">
    	</ImageView>
		<TextView 
			android:layout_width = "200dp"
			android:layout_height="50dp"
			android:text="Remote site lists"
			android:textColor="@color/text_color"
			android:padding="10px"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:gravity="left|center_vertical" android:layout_weight="0.72"/>					
    </LinearLayout>
       
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="5dp">
    </LinearLayout>
    
   	<LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp">
		<TextView 
			android:layout_width = "fill_parent"
			android:layout_height="40dp"
			android:text="(Click a remote site for connection)"
			android:textColor="@color/text_color"
			android:padding="10px"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center|center_vertical" android:layout_weight="0.72"/>	   	    		
    </LinearLayout>
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="0.5dp"
    	android:background="@color/gray_line" >    
    </LinearLayout>
        
	<LinearLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp"
    	android:background="@color/transparent_30">
    	<TextView    		
    		android:layout_width="100dp"
    		android:layout_height="40dp"
    		android:text="Location"
    		android:textColor="@color/text_color"
    		android:textAppearance="?android:attr/textAppearanceSmall"
    		android:gravity="center|center_vertical"/>
   		<TextView    		
    		android:layout_width="160dp"
    		android:layout_height="40dp"
    		android:text="Phone Number"
    		android:textColor="@color/text_color"
    		android:textAppearance="?android:attr/textAppearanceSmall"
    		android:gravity="center|center_vertical"/>
   		<TextView    		
    		android:layout_width="58dp"
    		android:layout_height="40dp"
    		android:text="Device"
    		android:textColor="@color/text_color"
    		android:textAppearance="?android:attr/textAppearanceSmall"
    		android:gravity="center|center_vertical"/>  	
		</LinearLayout>     
	    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="0.5dp"
    	android:background="@color/gray_line" >    
    </LinearLayout>
	    
    <!-- ListView -->	    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="410dp"
        android:orientation="vertical">
		<ListView
		    android:id="@+id/remote_site_list"
		    android:layout_width="fill_parent"
		    android:layout_height="410dp"
		    android:transcriptMode="alwaysScroll" 
		    android:cacheColorHint="#00000000">

		</ListView>
	</LinearLayout>
	
	   
</LinearLayout>	