<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_wood" 
    android:weightSum="1">
        <!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="20dp">
    </LinearLayout>
    
    <ImageView
    	android:id="@+id/splash"
    	android:src="@drawable/new_logo_icon" 
    	android:layout_gravity="center" 
    	android:layout_height="200dp" android:paddingBottom="20dp" 
    	android:layout_weight="0.64" android:layout_width="290dp">
    </ImageView>
    
    <!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="20dp">
    </LinearLayout>
       
    <!-- Password  -->
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">

    	<TextView
    	    android:layout_width="150dp"
    	    android:layout_height="50dp"
    	    android:gravity="center"
    	    android:text="Password (4 digits)"
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:textColor="@color/white" />

    	<EditText
    		android:layout_width = "150dp"
    		android:layout_height = "50dp"
    		android:id="@+id/password" 
    		android:password="true" 
    		android:inputType="number"/>
    </LinearLayout>
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp">
    </LinearLayout>
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center_horizontal">
    	<Button
    		android:id="@+id/login_button" 
        	android:text="Login"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:layout_width="70dp" 
        	android:layout_height="50dp"
        	android:layout_gravity="center" 
        	android:layout_weight="0.05"/>
    	<Button
    		android:id="@+id/login_cancel_button" 
        	android:text="Cancel"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:layout_width="70dp" 
        	android:layout_height="50dp"
        	android:layout_gravity="center" android:layout_weight="0.05"/>
    </LinearLayout>
</LinearLayout>