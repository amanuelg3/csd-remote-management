<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@color/background_remo">			  
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent" 
    	android:layout_height="50dp"    	
    	android:id="@+id/linearLayout1"     				 
    	android:layout_gravity="center_horizontal">
    	<ImageView
    		android:id="@+id/img_op_amp"
    		android:src="@drawable/op_amp" 
    		android:layout_gravity="center" 
    		android:layout_width="50dp" 
    		android:layout_height="50dp">
    	</ImageView>
    	
        <TextView 
        	android:id="@+id/textView1"
        	android:layout_width="fill_parent" 
        	android:layout_height="50dp" 
        	android:text="Optical Amplifier Control"        	
        	android:padding="5px"
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:textStyle="bold"
        	android:gravity="center"/>
    </LinearLayout>
    
    <!-- Separator -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="#ffffff" >    
    </LinearLayout>
    
  	<!-- Remote Site Information -->
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TextView
    		android:id="@+id/opamp_location"
    		android:layout_width = "100dp"
    		android:layout_height="50dp"
    		android:textColor="#ffffff"
    		android:text = "Location"  
    		android:textAppearance="?android:attr/textAppearanceSmall"   		
    		android:gravity="center"/>
    	<TextView
    		android:id="@+id/opamp_phonenumber"
    		android:layout_width = "120dp"
    		android:layout_height="50dp"
    		android:textColor="#ffffff"
    		android:text = "Phone Number"  
    		android:textAppearance="?android:attr/textAppearanceSmall"   		
    		android:gravity="center"/>
    	<TextView
    		android:id="@+id/opamp_device"
    		android:layout_width = "100dp"
    		android:layout_height="50dp"
    		android:textColor="#ffffff"
    		android:text = "Device Type"   
    		android:textAppearance="?android:attr/textAppearanceSmall"  		
    		android:gravity="center"/>    		
    </LinearLayout>
    
    <!-- Separator -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="#ffffff" >    
    </LinearLayout>
    
    <!--  Command -->
    <LinearLayout 
    		android:id="@+id/linearLayout2" 
    		android:orientation="horizontal"
    		android:layout_height="wrap_content"  
    		android:layout_width="fill_parent" 
    		>    			
        <TextView 
        	android:id="@+id/textView2"        		   
        	android:text="Command" 
        	android:layout_width="70dp" 
        	android:layout_height="60dp"
        	android:padding="1px" 
        	android:layout_gravity="center_horizontal"/>

        <Spinner
        	android:id="@+id/opamp_cmd_spinner" 
        	android:layout_width="200dp" 
        	android:layout_height="60dp" 
        	android:layout_gravity="center_horizontal"/>
        <Button 
        	android:id="@+id/opamp_edit_button" 
        	android:text="Edit"
        	android:layout_width="50sp" 
        	android:layout_height="60dp" /> 
    </LinearLayout>

	<!-- Buttons -->
    <LinearLayout 
    		android:id="@+id/linearLayout3" 
    		android:layout_height="wrap_content"  
    		android:layout_width="fill_parent" 
    		android:orientation="horizontal"
    		android:layout_gravity="center_horizontal">
    	<Button
    		android:id="@+id/opamp_send_button" 
        	android:text="Send Command"
        	android:layout_width="80dp" 
        	android:layout_height="50dp"
        	android:layout_gravity="center" 
        	android:layout_weight="0.05"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
    	<Button
    		android:id="@+id/opamp_clear_button" 
        	android:text="Clear"
        	android:layout_width="80dp" 
        	android:layout_height="50dp"
        	android:layout_gravity="center" 
        	android:layout_weight="0.05"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>    	
    		         		 
    </LinearLayout>

	<!-- Result Window -->  
	<LinearLayout 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="40dp"
			android:background="@color/background_result" >

       <TextView 
       		android:id="@+id/textView5"
       		android:text="RESULT" 
        	android:layout_height="fill_parent"        		   
        	android:layout_width="fill_parent"
        	android:gravity="center"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
	</LinearLayout>
    
    <ScrollView 			 
  			android:layout_width="fill_parent"
  			android:layout_height="200dp">
    <LinearLayout    		  
    		android:layout_width="fill_parent" 
    		android:layout_height="fill_parent">
		<TextView 
			android:id="@+id/opamp_result"
			android:layout_width="fill_parent" 
        	android:layout_height="fill_parent" 
        	android:text=""         	 
        	/>         
    </LinearLayout>
    </ScrollView>
    
</LinearLayout>  


