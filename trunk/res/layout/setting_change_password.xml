<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_wood">
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
   		<ImageView
    		android:src="@drawable/save_key_icon" 
    		android:layout_gravity="center" 
    		android:layout_width="50dp" 
    		android:layout_height="50dp"
    		android:padding="10px">
    	</ImageView>
		<TextView 
			android:layout_width = "220dp"
			android:layout_height="fill_parent"
			android:text="Change Password"
			android:padding="10px"
			android:textColor="@color/text_color"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:gravity="center|center_vertical" />
		<ImageButton
    	    android:id="@+id/password_home_image_button"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:background="#00000000"
    	    android:src="@drawable/home_64"
    	    android:text="Home" />
	</LinearLayout>
    
	<!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="30dp">
    	<TextView 
			android:layout_width = "fill_parent"
			android:layout_height="wrap_content"
			android:text="Password consists of 4 digits."
			android:textColor="@color/text_color"
			android:padding="5dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:gravity="center|center_vertical" />
    </LinearLayout>

    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="0.5dp"
    	android:background="@color/gray_line">
    </LinearLayout>

	<!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="20dp">
    </LinearLayout>
    
    <!-- Current Password -->
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">    	
    	<TextView
    		android:layout_width = "160dp"
    		android:layout_height="40dp"
    		android:textColor="@color/text_color"
    		android:text = "Current Password"     		
    		android:gravity="center"
    		android:textAppearance="?android:attr/textAppearanceMedium"/>
    		
    	<EditText 
    		android:layout_width="150dp" 
        	android:layout_height="wrap_content" 
        	android:id="@+id/current_password"        	
        	android:inputType="number"
        	android:password="true"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
 
     <!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="20dp">
    </LinearLayout>
    
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">    	
    	<TextView
    		android:layout_width = "160dp"
    		android:layout_height="40dp"
    		android:textColor="@color/text_color"
    		android:text = "New Password"     		
    		android:gravity="center"
    		android:textAppearance="?android:attr/textAppearanceMedium"/>
    		
    	<EditText 
    		android:layout_width="150dp" 
        	android:layout_height="wrap_content" 
        	android:id="@+id/new_password"        	
        	android:inputType="number"
        	android:password="true"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    
    <!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="20dp">
    </LinearLayout>
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">    	
    	<TextView
    		android:layout_width = "160dp"
    		android:layout_height="40dp"
    		android:textColor="@color/text_color"
    		android:text = "Confirm Password"
    		android:gravity="center"
    		android:textAppearance="?android:attr/textAppearanceMedium"/>
    		
    	<EditText 
    		android:layout_width="150dp" 
        	android:layout_height="wrap_content" 
        	android:id="@+id/confirm_password"        	
        	android:inputType="number"
        	android:password="true"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
  
      <!-- Blank Layout -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp">
    </LinearLayout>
    
    
        <!-- Button  -->
     <LinearLayout
       	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
       	<Button 
        	android:id="@+id/change_password_button" 
        	android:text="Change"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:layout_width="100dp"
        	android:layout_height="50dp" 
        	android:layout_gravity="center"       	 
        	android:layout_weight="1"/>
        <Button
        	android:id="@+id/back_password_button"
        	android:text="Back"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:layout_width="100dp"
        	android:layout_height="50dp"
        	android:layout_gravity="center"        	 
        	android:layout_weight="1"/>    
    </LinearLayout>
    
</LinearLayout>