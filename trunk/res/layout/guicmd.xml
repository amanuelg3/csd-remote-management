<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@drawable/background_wood">			  
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent" 
    	android:layout_height="50dp"    	
    	android:id="@+id/linearLayout1"     				 
    	android:layout_gravity="center_horizontal">
    	<ImageView
    		android:id="@+id/img_gui_icon"
    		android:src="@drawable/smartphone" 
    		android:layout_gravity="center" 
    		android:layout_width="50dp" 
    		android:layout_height="50dp">
    	</ImageView>
    	
        <TextView
            android:id="@+id/textView1"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="5px"
            android:text="GUI Command"
            android:textColor="@color/text_color"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

		<ImageButton
    	    android:id="@+id/gui_home_image_button"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:background="#00000000"
    	    android:src="@drawable/home_64"
    	    android:text="Home" />        
    </LinearLayout>
    
    <!-- Separator -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="0.5dp"
    	android:background="@color/gray_line" >    
    </LinearLayout>
    
  	<!-- Remote Site Information -->
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TextView
    		android:id="@+id/guicmd_location"
    		android:layout_width = "100dp"
    		android:layout_height="50dp"    		
    		android:text = "Location" 
    		android:textColor="@color/text_color" 
    		android:textAppearance="?android:attr/textAppearanceSmall"   		
    		android:gravity="center"/>
    	<TextView
    		android:id="@+id/guicmd_phonenumber"
    		android:layout_width = "120dp"
    		android:layout_height="50dp"    		
    		android:text = "Phone Number"
    		android:textColor="@color/text_color"  
    		android:textAppearance="?android:attr/textAppearanceSmall"   		
    		android:gravity="center"/>
    	<TextView
    		android:id="@+id/guicmd_device"
    		android:layout_width = "100dp"
    		android:layout_height="50dp"    		
    		android:text = "Device Type"
    		android:textColor="@color/text_color"   
    		android:textAppearance="?android:attr/textAppearanceSmall"  		
    		android:gravity="center"/>    		
    </LinearLayout>
    
    <!-- Separator -->
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="0.5dp"
    	android:background="@color/gray_line" >    
    </LinearLayout>
    
    <!--  Command -->
    <LinearLayout 
    		android:id="@+id/linearLayout2" 
    		android:orientation="horizontal"
    		android:layout_height="wrap_content"  
    		android:layout_width="fill_parent" 
    		>    			
        <TextView 
        	android:id="@+id/textView2"        		   
        	android:text="Command" 
        	android:textColor="@color/text_color"
        	android:layout_width="100dp" 
        	android:layout_height="60dp"
        	android:padding="1px" 
        	android:gravity="center|center_vertical"/>

        <Spinner
        	android:id="@+id/guicmd_spinner" 
        	android:layout_width="220dp" 
        	android:layout_height="60dp" 
        	android:layout_gravity="center_horizontal"/>
         
    </LinearLayout>

	<!-- Buttons -->
    <LinearLayout 
    		android:id="@+id/linearLayout3" 
    		android:layout_height="wrap_content"  
    		android:layout_width="fill_parent" 
    		android:orientation="horizontal"
    		android:layout_gravity="center_horizontal">
    	<Button
    		android:id="@+id/guicmd_send_button" 
        	android:text="Send"
        	android:layout_width="80dp" 
        	android:layout_height="50dp"
        	android:layout_gravity="center" 
        	android:layout_weight="0.05"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
        <Button
    		android:id="@+id/guicmd_logout_button" 
        	android:text="Logout"
        	android:layout_width="80dp" 
        	android:layout_height="50dp"
        	android:layout_gravity="center" 
        	android:layout_weight="0.05"
        	android:textAppearance="?android:attr/textAppearanceMedium"/>    	
    	
    </LinearLayout>

	<!-- Result Window -->  
	<LinearLayout 
			android:orientation="vertical" 
			android:layout_width="fill_parent" 
			android:layout_height="40dp"
			android:background="@color/transparent_30">

       <TextView 
       		android:id="@+id/textView5"       		
        	android:layout_height="40dp"        		   
        	android:layout_width="fill_parent"
        	android:text="RESULT" 
        	android:textColor="@color/text_result"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:gravity="center"
        	/>
	</LinearLayout>
    
    <ScrollView 			 
  			android:layout_width="fill_parent" 
  			android:layout_height="200dp">
    <LinearLayout    
    		android:orientation="vertical"		  
    		android:layout_width="fill_parent" 
    		android:layout_height="200dp">
		<TextView 
			android:id="@+id/guicmd_result"			
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
        	android:text="" 
        	android:textColor="#ffffff"    		
    		android:textAppearance="?android:attr/textAppearanceSmall" />         
    </LinearLayout>
    </ScrollView>
    
</LinearLayout>  


